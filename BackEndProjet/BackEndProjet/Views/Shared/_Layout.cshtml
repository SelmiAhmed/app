<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @{
        ViewBag.Title = "Index";
        // Layout = null;
    }

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nom de l'application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <a href="#"  class="btn btn-success" onclick="SendOTP()">Send OTP</a>
    <script>


        var SendOTP = function () {

            $.ajax({
                type: "post",
                success: function (data) {
                    if (data == "success") {

                        alert("OTP sent successfully");
                    }
                    else {
                        alert("failed");
                    }
                }


            })

        }

    </script>
    <h2>EnterOtp</h2>
    <input type="text" id="enterotp" placeholder="enterotp" class="form-control" />
    <a href="#" onclick="verifyotp()" class="btn btn-primary">Okay</a>
    <script>
        var verifyotp = function () {
            var otp = $("#enterotp").val();
            $.ajax({
                data: { otp: otp },
                type: "post",
                success: function (data) {
                    debugger
                    if (data == true) {
                        alert("verification sucessful");
                    }
                    else {
                        alert("failed");
                    }
                }
            })
        }
    </script>
</body>
</html>